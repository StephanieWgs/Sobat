<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/judul"
                android:textStyle="bold"
                android:textColor="@color/hitam"
                android:text="@string/sapaan">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/fntBsr"
                android:textColor="@color/hitam"
                android:text="@string/ajakan">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|top">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="end|top"
                android:background="@drawable/notification">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingBottom="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/kotak_anak"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/subjudul"
                                android:textStyle="bold"
                                android:textColor="@color/hijauTua"
                                android:text="@string/namaAnak">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fntKcl"
                                android:textColor="@color/hijauTua"
                                android:layout_marginTop="5dp"
                                android:text="@string/masuk">
                            </TextView>
                            <LinearLayout
                                android:layout_width="160dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bar">
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fntBsr"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hijauTua"
                                android:text="@string/umur">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end|top">

                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginStart="20dp"
                                android:gravity="end|top"
                                android:background="@drawable/boy">
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="310dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/kotak_tambah"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fntBsr"
                            android:textColor="@color/hijauTua"
                            android:layout_marginTop="30dp"
                            android:text="@string/captionTambah">
                        </TextView>

                        <LinearLayout
                            android:layout_width="270dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fntBsr"
                                android:textColor="@color/putih"
                                android:textStyle="bold"
                                android:text="@string/buttonTmbh">
                            </TextView>
                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/add">
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:background="@drawable/kotak_besar"
                android:padding="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/judul"
                    android:textStyle="bold"
                    android:textColor="@color/hijauTua"
                    android:text="@string/menu">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/catat1"
                            android:orientation="horizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/tombol_catat">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fntKcl"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/hijauTua"
                            android:text="@string/catat">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/tombol_konsul">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fntKcl"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/hijauTua"
                            android:text="@string/konsul">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/tombol_forum">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fntKcl"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/hijauTua"
                            android:text="@string/forum">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/tombol_imun">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fntKcl"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/hijauTua"
                            android:text="@string/imun">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="310dp"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:background="@drawable/kotak_forum"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="270dp"
                                android:layout_height="90dp"
                                android:background="@drawable/gbr_forum">
                            </LinearLayout>
                            <TextView
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/fntBsr"
                                android:textColor="@color/hijauTua"
                                android:text="@string/judulBerita">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="310dp"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:background="@drawable/kotak_forum"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_marginStart="20dp">
                            <LinearLayout
                                android:layout_width="270dp"
                                android:layout_height="90dp"
                                android:background="@drawable/gbr_forum">
                            </LinearLayout>
                            <TextView
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/fntBsr"
                                android:textColor="@color/hijauTua"
                                android:text="@string/judulBerita">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/judul"
                    android:textStyle="bold"
                    android:textColor="@color/hijauTua"
                    android:layout_marginTop="30dp"
                    android:text="@string/forum">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kotak_forum"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ibu">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="@dimen/fntKcl"
                            android:textColor="@color/hijauTua"
                            android:textStyle="bold"
                            android:text="@string/namaIbu">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/fntKcl"
                            android:textColor="@color/abu"
                            android:textStyle="bold"
                            android:text="@string/detailPosting">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fntSdg"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/hijauTua"
                        android:textStyle="bold"
                        android:text="@string/judulForum">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kotak_forum"
                    android:orientation="vertical"
                    android:layout_marginTop="-1dp"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ibu">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="@dimen/fntKcl"
                            android:textColor="@color/hijauTua"
                            android:textStyle="bold"
                            android:text="@string/namaIbu">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/fntKcl"
                            android:textColor="@color/abu"
                            android:textStyle="bold"
                            android:text="@string/detailPosting">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fntSdg"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/hijauTua"
                        android:textStyle="bold"
                        android:text="@string/judulForum">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kotak_forum"
                    android:orientation="vertical"
                    android:layout_marginTop="-1dp"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ibu">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="@dimen/fntKcl"
                            android:textColor="@color/hijauTua"
                            android:textStyle="bold"
                            android:text="@string/namaIbu">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/fntKcl"
                            android:textColor="@color/abu"
                            android:textStyle="bold"
                            android:text="@string/detailPosting">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fntSdg"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/hijauTua"
                        android:textStyle="bold"
                        android:text="@string/judulForum">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

<!--Menu Tab-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-70dp"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="70dp"
            android:background="@drawable/home_active">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/catat2"
            android:layout_width="144dp"
            android:layout_height="70dp"
            android:background="@drawable/catat_inactive">
        </LinearLayout>
        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="70dp"
            android:background="@drawable/profil_inactive">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>